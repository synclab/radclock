+/*
+ * Access to current ffcounter value
+ */
+void
+ffclock_read_counter(ffcounter *ffcount)
+{
+	struct timehands *th;
+	struct fftimehands *ffth;
+	u_int gen, delta;
+
+	/*
+	 * ffclock_windup() called from tc_windup(), safe to rely on
